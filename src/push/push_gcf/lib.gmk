######################################################################
#
# Module's Component Configuration file
#
# Remember: It is up to the module itself to impose rules of
# how to compile the options. All the global Makefile needs
# is the final def. of Java and native file lists and some
# other def. (like VPATH)
#
######################################################################

# Adds to global SUBSYSTEMS list
#
PUSH_GCF_LIB = push_gcf
LIB_SET += $(PUSH_GCF_LIB)

# Common settings
#

PUSH_GCF_DIR = $(SUBSYSTEM_PUSH_DIR)/$(PUSH_GCF_LIB)
PUSH_GCF_CLASSES_DIR = $(PUSH_GCF_DIR)/classes
PUSH_GCF_TESTS_DIR = $(PUSH_GCF_DIR)/tests

PUSH_GCF_API_PACKAGE = com.sun.midp.push.gcf

PUSH_GCF_API_PACKAGE_DIR=$(PUSH_GCF_CLASSES_DIR)/$(shell echo $(PUSH_GCF_API_PACKAGE) | tr '.' '/')

# Classes and files
#

# No native files so far
SUBSYSTEM_PUSH_GCF_NATIVE_FILES =
SUBSYSTEM_PUSH_GCF_EXTRA_INCLUDES =

# Javadoc settings
#
LIB_PUSH_GCF_SOURCEPATH = $(PUSH_GCF_CLASSES_DIR)

SUBSYSTEM_PUSH_GCF_PACKAGES = \
    $(PUSH_GCF_API_PACKAGE)

MIDP_JAVADOC_ALL += \
    -group "Push-GCF interfaces" \
    $(shell echo $(SUBSYSTEM_PUSH_GCF_PACKAGES) | tr ' ' $(PATHSEP))

# TBD: rethink names/packages/packiging of the classes in impl subpackage
SUBSYSTEM_PUSH_GCF_JAVA_FILES += \
    $(PUSH_GCF_API_PACKAGE_DIR)/ConnectionReservation.java \
    $(PUSH_GCF_API_PACKAGE_DIR)/DataAvailableListener.java \
    $(PUSH_GCF_API_PACKAGE_DIR)/PermissionCallback.java \
    $(PUSH_GCF_API_PACKAGE_DIR)/ReservationDescriptor.java \
    $(PUSH_GCF_API_PACKAGE_DIR)/ReservationDescriptorFactory.java \
    $(PUSH_GCF_API_PACKAGE_DIR)/impl/ConnectionName.java \
    $(PUSH_GCF_API_PACKAGE_DIR)/impl/MapProtocolRegistry.java \
    $(PUSH_GCF_API_PACKAGE_DIR)/impl/ProtocolClassResolver.java \
    $(PUSH_GCF_API_PACKAGE_DIR)/impl/ProtocolFactory.java \
    $(PUSH_GCF_API_PACKAGE_DIR)/impl/ProtocolRegistry.java \
    $(PUSH_GCF_API_PACKAGE_DIR)/impl/RDFactory.java \
    $(PUSH_GCF_API_PACKAGE_DIR)/impl/ClassLoadingProtocolRegistry.java

ifeq ($(USE_JUNIT_TEST), true)
    SUBSYSTEM_PUSH_GCF_JUNIT_JAVA_FILES = \
        $(PUSH_GCF_TESTS_DIR)/com/sun/midp/push/gcf/impl/AllTests.java \
        $(PUSH_GCF_TESTS_DIR)/com/sun/midp/push/gcf/impl/Common.java \
        $(PUSH_GCF_TESTS_DIR)/com/sun/midp/push/gcf/impl/MapProtocolRegistryTest.java \
        $(PUSH_GCF_TESTS_DIR)/com/sun/midp/push/gcf/impl/RDFactoryTest.java
endif

ifeq ($(USE_I3_TEST), true)
    SUBSYSTEM_PUSH_GCF_I3TEST_JAVA_FILES =
endif
